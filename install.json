{
  "resources": {
    "body": [
      {
        "type": "script",
        "src": "./app.js"
      },
      {
        "type": "style",
        "src": "./app.css"
      }
    ]  
  },
  "options": {
    "properties": {
      "max": {
        "order": 1, 
        "title": "Maximum font size", 
        "type" : "number", 
        "placeholder": 72.0, 
        "default": 72.0
      },
      "min": {
        "order": 2, 
        "title": "Minimum font size", 
        "type" : "number", 
        "placeholder": 6.0, 
        "default": 6.0
      },
      "position": {
        "order": 3, 
        "title": "Position", 
        "type": "string", 
        "enum": [
          "top-left",
          "top-right",
          "bottom-left",
          "bottom-right"
        ],
        "enumNames": {
          "top-left": "Top left corner",
          "top-right": "Top right corner",
          "bottom-left": "Bottom left corner",
          "bottom-right": "Bottom right corner"
        },
        "format": "radios",
        "default": "top-right"
        } 
      }
    }
}

